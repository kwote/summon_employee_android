<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="request" type="employee.summon.asano.model.SummonRequest"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
            android:id="@+id/caller_id"
            android:layout_height="wrap_content"
            android:text='@{request.caller()}'
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView android:layout_width="wrap_content"
            android:id="@+id/target_id"
            android:layout_height="wrap_content"
            android:text="@{request.target()}"
            app:layout_constraintTop_toBottomOf="@id/caller_id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView android:layout_width="wrap_content"
            android:id="@+id/summon_time"
            android:layout_height="wrap_content"
            android:text="@{request.summoned().toLocaleString()}"
            app:layout_constraintTop_toBottomOf="@id/caller_id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>